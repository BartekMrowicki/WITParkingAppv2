<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/editText"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#274668"
    android:backgroundTint="#D37979"
    android:backgroundTintMode="multiply"
    android:hapticFeedbackEnabled="false"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/name_edittext_reg"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="256dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/rounded_editttext_reg"
        android:drawableLeft="@drawable/ic_verified_user_black_24dp"
        android:ems="10"
        android:hint="Your Name"
        android:inputType="textPersonName"
        android:paddingLeft="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/email_edittext_log"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded_editttext_reg"
        android:drawableLeft="@drawable/ic_email_black_24dp"
        android:ems="10"
        android:hint="Student Email"
        android:inputType="textEmailAddress"
        android:paddingLeft="16dp"
        app:layout_constraintEnd_toEndOf="@+id/name_edittext_reg"
        app:layout_constraintStart_toStartOf="@+id/name_edittext_reg"
        app:layout_constraintTop_toBottomOf="@+id/name_edittext_reg" />

    <Button
        android:id="@+id/button_log"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_button_reg"
        android:paddingLeft="16dp"
        android:text="Get Started"
        app:layout_constraintEnd_toEndOf="@+id/password_edittext_log"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/password_edittext_log"
        app:layout_constraintTop_toBottomOf="@+id/password_edittext_log" />

    <TextView
        android:id="@+id/textView_log"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="#00FFFFFF"
        android:text="Already have an account ? "
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="@+id/button_log"
        app:layout_constraintStart_toStartOf="@+id/button_log"
        app:layout_constraintTop_toBottomOf="@+id/button_log" />

    <EditText
        android:id="@+id/password_edittext_log"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:paddingLeft="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded_editttext_reg"
        android:ems="10"
        android:hint="Password"
        android:drawableLeft="@drawable/ic_lock_black_24dp"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="@+id/email_edittext_log"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/email_edittext_log"
        app:layout_constraintTop_toBottomOf="@+id/email_edittext_log" />

    <ImageView
        android:id="@+id/regimage"
        android:layout_width="416dp"
        android:layout_height="200dp"
        android:layout_marginTop="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/topicon2" />

</androidx.constraintlayout.widget.ConstraintLayout>